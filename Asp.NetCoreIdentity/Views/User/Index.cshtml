@model List<AppUser>
    <a asp-action="Create" asp-controller="User" class="btn btn-outline-primary my-2 d-inline-block">Add User</a>
    <table class="table table-hovered table-bordered table-shadow table-md">
        <thead>

            <tr>
                <th>Username</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Role Info</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Gender</td>
                    <td>@item.Email</td>
                    <td><getUserInfo user-id="@item.Id" /></td>
                    <td></td>
                </tr>
            }

        </tbody>
    </table>